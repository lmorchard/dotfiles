[user]
    name = Les Orchard
    email = lmorchard@github.com
    # email = me@lmorchard.com
[core]
    whitespace = -trailing-space
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[pack]
    threads = 0
[diff]
    renamelimit = 0
[alias]
    st = -p status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    cp = cherry-pick
[push]
    default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
